mixin loader
    .loader#loader
        .loader__body
            .loader__value
                span.val 80
                span %

            .loader__pic
                svg(width='100%' height='100%' xmlns='http://www.w3.org/2000/svg')
                    circle(
                        cx='50%'
                        cy='50%'
                        r='40'
                        fill="none"
                        stroke='#e0e0e0'
                        stroke-opacity='1'
                        stroke-width='10'
                    )
                    circle.loader__circle.progressed(
                        cx='50%'
                        cy='50%'
                        r='40'
                        fill="none"
                        stroke="#45AC34"
                        stroke-width='10'
                        stroke-linecap='round'
                        stroke-dashoffset='0'
                    )
                    circle(
                        cx='50%'
                        cy='50%'
                        r='calc(50% - 5px)'
                        fill="none"
                        stroke='white'
                        stroke-opacity='0.2'
                        stroke-width='10'
                    )