                    input.controller.btnNextStep.invisible(
                        type="radio"
                        name="quality"
                        data-question="Если сравнить Ваш будущий матрас с отелем, каким он будет?"
                        data-answer="Простым и бюджетным."
                        data-next-step-id="#howUrgent")
                    span.question__val Простым и бюджетным
                    span.question__rating
                        include ../../../img/icon-start.svg

                label.question__item.question__item_large
                    input.controller.btnNextStep.invisible(
                        type="radio"
                        name="quality"
                        data-question="Если сравнить Ваш будущий матрас с отелем, каким он будет?"
                        data-answer="Баланс цены и качества."
