//- Variables from pages
block variables

doctype html
html(lang="ru")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(name="robots" content="index, follow")
        meta(name="description" content=description)
        meta(name="keywords" content=keywords)
        title #{title}

        link(rel="preload" href="css/main.css" as="style")
        link(rel="stylesheet" href="css/main.css" type="text/css")

        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet")

        link(rel="apple-touch-icon" sizes="180x180" href="favicon/xapple-touch-icon.png.pagespeed.ic.fg1H9XNPx6.webp")
        link(rel="icon" type="image/png" href="favicon/xfavicon-32x32.png.pagespeed.ic.jyhCVJTC09.webp" sizes="32x32")
        link(rel="icon" type="image/png" href="favicon/xfavicon-16x16.png.pagespeed.ic.kkgpt7C3kP.webp" sizes="16x16")
        link(rel="manifest" href="favicon/manifest.json")
        link(rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#009a3d")
        meta(name="theme-color" content="#ffffff")

    body(class=pageClass data-current-question="forWhom")

        header.header#header
            include header/header

        main.main#main
            block content

        footer.footer#footer
            include footer/footer

        include modals/consultation
        include modals/presentation

        script(src="js/script.js" async)